@inherits CTBaseComponent

<option value="@Value" disabled="@Disabled" selected="@Selected" @attributes="AddAttributes">@ChildContent</option>

@code {
    //CTSelectOption.razor
    [CascadingParameter] protected CTSelect ParentSelect { get; set; }
    [Parameter] public string Value { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool Selected { get; set; }
    protected override void OnInitialized()
    {
        if (ParentSelect != null)
        {
            ParentSelect.Options.Add(new CTSelectOption
                {
                    Value = Value,
                    ChildContent = ChildContent,
                    Disabled = Disabled,
                    Selected = Selected
                });
        }
    }
}

